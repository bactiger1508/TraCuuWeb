@model List<TraCuuWeb.Data.GoiCuoc>
@using TraCuuWeb.Data
@{
    ViewData["Title"] = "Home";
    var nhomLons = ViewBag.NhomLons as List<NhomLon>;
    int currentCategory = ViewBag.CurrentCategory ?? 0;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    List<int?> GetPaging(int current, int total)
    {
        var pages = new List<int?>();
        int start = Math.Max(1, current - 1);
        int end = Math.Min(total, current + 1);
        for (int i = start; i <= end; i++) pages.Add(i);
        if (end < total - 2)
        {
            pages.Add(null);
            pages.Add(total - 1);
            pages.Add(total);
        }
        else if (end == total - 2)
        {
            pages.Add(total - 1);
            pages.Add(total);
        }
        else
        {
            for (int i = end + 1; i <= total; i++) pages.Add(i);
        }
        return pages.Distinct().Where(p => p >= 1 && p <= total).ToList();
    }
    var paging = GetPaging(currentPage, totalPages);
}
